<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.fxml.FXMLLoader?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ComboBox?>
<VBox alignment="CENTER" spacing="10.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.pokemonGame.Controllers.CombatController"
      styleClass="Combat__Page__Container">

    <children>
        <Label text="Combate" styleClass="Start__Page__Title"/>
        <HBox spacing="20" alignment="CENTER" styleClass="Text__Container">
            <TextArea fx:id="ConsoleOutput" editable="false" wrapText="true" prefHeight="200" styleClass="Console__Output__Area"/>
        </HBox>

        <HBox spacing="20" alignment="CENTER" styleClass="Text__Container">
            <ComboBox fx:id="PokemonList" prefWidth="200"/>
        </HBox>

        <HBox spacing="20" alignment="CENTER"  styleClass="Start__Page__Buttons__Container">
            <Button text="Pasar de turnos" onAction ="#nextTurn" fx:id="passTurn" styleClass="Start__Page__Buttons"/>
            <Button text="Atacar" onAction ="#nextTurn" fx:id="attack" styleClass="Start__Page__Buttons"/>
            <Button text="Poción de curación" onAction ="#nextTurn" fx:id="useHealingPotion" styleClass="Start__Page__Buttons"/>
        </HBox>
        <HBox spacing="20" alignment="CENTER"  styleClass="Start__Page__Buttons__Container">
            <Button text="Poción de fuerza" onAction ="#nextTurn" fx:id="useDefPotion" styleClass="Start__Page__Buttons"/>
            <Button text="Poción de defensa" onAction ="#nextTurn" fx:id="useStrengthPotion" styleClass="Start__Page__Buttons"/>
            <Button text="Poción de velocidad" onAction ="#nextTurn" fx:id="useSpeedPotion" styleClass="Start__Page__Buttons"/>
        </HBox>
        <HBox spacing="20" alignment="CENTER"  styleClass="Start__Page__Buttons__Container">
            <Button text="Rendirse" onAction ="#nextTurn" fx:id="forfeit" styleClass="Start__Page__Buttons"/>
        </HBox>
    </children>

</VBox>